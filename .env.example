# Ambiente
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Banco de Dados - PostgreSQL
# Para desenvolvimento local:
DATABASE_URL="postgresql://user:password@localhost:5432/sistema_provas?connection_limit=10"
# Para produção na Render:
# DATABASE_URL="postgresql://user:password@host:port/database?connection_limit=100&pool_timeout=10&connect_timeout=30&statement_timeout=30000&schema=public"

# Cache e Filas - Redis
# Para desenvolvimento local:
REDIS_URL="redis://localhost:6379"
# Para produção na Render:
# REDIS_URL="rediss://user:password@host:port"

# JWT - ALTERE ESTAS CHAVES PARA PRODUÇÃO!
JWT_SECRET="seu-jwt-secret-super-seguro-aqui"
JWT_REFRESH_SECRET="seu-refresh-secret-super-seguro-aqui"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Rate Limiting - Configuração para recursos limitados
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_STUDENT_LOGIN_MAX=100
RATE_LIMIT_ANSWER_MAX=60

# Cache - Configuração para recursos limitados
CACHE_TTL=300
CACHE_MAX_KEYS=5000

# Logs
LOG_LEVEL="info"
LOG_FILE_ENABLED=true
LOG_MAX_FILES=30
LOG_MAX_SIZE="20m"

# Monitoramento
METRICS_ENABLED=true
ALERTS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Filas - Configuração para recursos limitados
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_CONCURRENCY=2
QUEUE_MAX_ATTEMPTS=3

# Upload de Arquivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Email (opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-de-app"
SMTP_FROM="Sistema de Provas <noreply@exemplo.com>"

# Frontend
FRONTEND_URL="http://localhost:3001"

# Segurança
BCRYPT_ROUNDS=12

# Performance
WEB_CONCURRENCY=4

# Monitoramento
ENABLE_MONITORING=false
METRICS_ENDPOINT="/api/v1/metrics"

# Render (produção)
# DATABASE_URL será fornecido automaticamente pelo Render
# REDIS_URL será fornecido automaticamente pelo Render
# Defina as outras variáveis no painel do Render